<MudCard Elevation="5">
    <MudCardHeader>
        <MudText Typo="Typo.h6">@FormTitle</MudText>
    </MudCardHeader>
    <MudCardContent>
        <EditForm Model="@CatalogType" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator/>
            <MudStack>
                <MudTextField @bind-Value="CatalogType.Name" For="@(() => CatalogType.Name)" Label="Catalog Type Name"
                              Variant="Variant.Outlined" Margin="Margin.Dense" ShrinkLabel="true"/>
                <MudStack Justify="Justify.FlexEnd" Row="true">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Outlined.Save"
                               ButtonType="ButtonType.Submit">
                        Save
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary"
                               ButtonType="ButtonType.Button" OnClick="Reset">
                        Reset
                    </MudButton>
                </MudStack>
            </MudStack>
        </EditForm>
    </MudCardContent>
</MudCard>

@code{

    [Parameter]
    public required CatalogTypeDto CatalogType { get; set; }

    private string FormTitle => CatalogType.Id == 0 ? "Add Catalog Type" : $"Edit Catalog Type #{CatalogType.Id}";

    private void OnValidSubmit()
    {
    }

    private void Reset()
    {
        CatalogType = new CatalogTypeDto();
    }

}