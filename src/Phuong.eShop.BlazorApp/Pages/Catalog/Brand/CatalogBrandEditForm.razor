<MudCard Elevation="5">
    <MudCardHeader>
        <MudText Typo="Typo.h6">@FormTitle</MudText>
    </MudCardHeader>
    <MudCardContent>
        <EditForm Model="@CatalogBrand" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator/>
            <MudStack>
                <MudTextField @bind-Value="CatalogBrand.Name" For="@(() => CatalogBrand.Name)" Label="Brand Name"
                              Variant="Variant.Outlined" Margin="Margin.Dense" ShrinkLabel="true"/>
                <MudStack Justify="Justify.FlexEnd" Row="true">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Outlined.Save"
                               ButtonType="ButtonType.Submit">
                        Save
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary"
                               ButtonType="ButtonType.Button" OnClick="Reset">
                        Reset
                    </MudButton>
                </MudStack>
            </MudStack>
        </EditForm>
    </MudCardContent>
</MudCard>

@code{

    [Parameter]
    public required CatalogBrandDto CatalogBrand { get; set; }

    private string FormTitle => CatalogBrand.Id == 0 ? "Add Brand" : $"Edit Brand #{CatalogBrand.Id}";

    private void OnValidSubmit()
    {
    }

    private void Reset()
    {
        CatalogBrand = new CatalogBrandDto();
    }

}