@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Transparent" Fixed="true" Elevation="0">
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudImage Src="logo.png" Height="48" Width="48" ObjectFit="ObjectFit.Contain"></MudImage>
            <MudText Typo="Typo.h6" Style="font-weight: bold">E-SHOP</MudText>
        </MudStack>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit"/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>